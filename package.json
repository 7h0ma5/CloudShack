  "description": "Amateur Radio logbook server",
  "author": "Thomas Gatzweiler <dl2ic@darc.de>",
  "license": "GPL-3.0",
  "main": "server.js",
  "bin": {
    "cloudshack": "./server.js"
  },
  "files": [
    "controllers",
    "lib",
    "public",
    "server.js",
    "package.json",
    "LICENSE"
  ],
  "preferGlobal": "true",
  "repository": {
    "type": "git",
    "url": "git://github.com/7h0ma5/cloudshack.git"
  },
  "scripts": {
    "start": "node server.js",
    "build": "npm install && bower install && gulp",
    "prepublish": "bower install && gulp",
    "test": "mocha test/",
    "test-coverage": "istanbul cover node_modules/mocha/bin/_mocha -- test/",
    "test-travis": "istanbul cover node_modules/mocha/bin/_mocha --report lcovonly -- test/",
    "doc": "jsdoc -p -d docs -r lib/",
    "recess": "recess --noOverqualifying false webapp/app.less"
  },
  "dependencies": {
    "adif": "^0.2.6",
    "async": "^1.4.0",
    "body-parser": "^1.13.2",
