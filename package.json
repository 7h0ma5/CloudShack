    "gulp-ng-annotate": "^1.0.0",
    "gulp-order": "^1.1.1",
    "gulp-plumber": "^1.0.1",
    "gulp-sourcemaps": "^1.5.2",
    "gulp-uglify": "^1.2.0",
    "istanbul": "^0.3.17",
    "jsdoc": "^3.3.2",
    "merge-stream": "^0.1.8",
    "mocha": "^2.2.5",
    "recess": "^1.1.9",
    "supertest": "^1.0.1"
