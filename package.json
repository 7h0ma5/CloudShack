    "express": "^4.13.1",
    "libxmljs": "^0.14.2",
    "lodash": "^3.10.0",
    "nano": "^6.1.4",
    "serialport": "^1.7.4",
    "serve-static": "^1.10.0",
    "socket.io": "^1.3.6",
    "superagent": "^1.2.0",
    "winston": "^1.0.1"
  },
  "devDependencies": {
    "bower": "^1.4.1",
    "gulp": "^3.9.0",
    "gulp-autoprefixer": "^2.3.1",
