  "license": "GPL-3.0",
  "main": "server.js",
  "bin": {
    "cloudshack": "./server.js"
  },
  "files": [
    "controllers",
    "lib",
    "public",
    "server.js",
    "package.json",
    "LICENSE"
  ],
  "preferGlobal": "true",
  "repository": {
    "type": "git",
    "url": "git://github.com/7h0ma5/cloudshack.git"
  },
  "scripts": {
