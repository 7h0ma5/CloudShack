{
  "name": "cloudshack",
  "version": "0.1.0",
  "description": "Amateur Radio logbook server",
  "author": "Thomas Gatzweiler <dl2ic@darc.de>",
  "license": "GPL-3.0",
  "main": "server.js",
  "bin": {
    "cloudshack": "./server.js"
  },
  "files": [
    "controllers",
    "lib",
    "public",
    "server.js",
    "package.json",
    "LICENSE"
  ],
  "preferGlobal": "true",
  "repository": {
    "type": "git",
    "url": "git://github.com/7h0ma5/cloudshack.git"
  },
  "scripts": {
    "start": "node server.js",
    "build": "npm install && bower install && brunch build",
    "prepublish": "bower install && brunch build",
    "test": "mocha --check-leaks test/",
    "test-coverage": "istanbul cover node_modules/mocha/bin/_mocha -- test/",
    "test-travis": "istanbul cover node_modules/mocha/bin/_mocha --report lcovonly -- test/"
  },
  "dependencies": {
    "express": "~4.8.8",
    "body-parser": "~1.8.1",
    "errorhandler": "~1.2.0",
    "serve-static": "~1.6.1",
    "morgan": "~1.3.0",
    "request": "~2.42.0",
    "libxmljs": "~0.11.1",
    "nano": "~5.11.0",
    "socket.io": "~1.1.0",
    "dateformat": "~1.0.8",
    "async": "~0.9.0"
  },
  "devDependencies": {
    "bower": "~1.3.9",
    "brunch": "~1.7.14",
    "javascript-brunch": "~1.7.1",
    "css-brunch": "~1.7.0",
    "less-brunch": "~1.7.2",
    "clean-css-brunch": "~1.7.1",
    "auto-reload-brunch": "~1.7.3",
    "ng-annotate-uglify-js-brunch": "~1.7.4",
    "mocha": "^1.21.4",
    "supertest": "^0.13.0",
    "istanbul": "^0.3.2"
  }
}
